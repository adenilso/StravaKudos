{
  "manifest_version": 2,

  "name": "Strava Kudos",
  "description": "Auto-Kudos activities",
  "version": "0.4",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.strava.com/dashboard*","https://www.strava.com/athletes/*","https://www.strava.com/clubs/*"],
      "js": ["./index-min.js"],
      "css": ["./styles.css"]
    }
  ]
}